
@{
    ViewBag.Title = "MRFIndex";
}


<div>
    <body style="margin:0px; padding:0px; width:1248px; background-color:aliceblue">

        <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
            <div class="card-header" style="height:50px; width:1264px; background-color:#147ea8; font-size:x-large; color:white">MRF Definer</div>



        </div>

        <div style="border-bottom:2px solid black">
            <h1>General Information</h1>
        </div>

        <form>
            <div>
                <div style="float:left">
                    <div class="form-group" style="width:550px">
                        <label>Position Name</label><br />
                        <input type="text" class="form-control" id="PositionName" placeholder="positionName" />
                    </div>


                    <div class="form-group" style="width:550px">
                        <label>MRF Created Date</label><br />
                        <input type="date" class="form-control" id="MRFCreatedDate" placeholder="MRF Created Date" />
                    </div>
                </div>

                <div style="float:right;">
                    <div class="form-group" style="width:550px">
                        <label>MRF created by</label><br />
                        <input type="text" class="form-control" id="MRFcreatedby" value="@ViewBag.UserName" disabled />
                    </div>


                    <div class="form-group" style="width:550px">
                        <label>Position to be filled before</label><br />
                        <input type="date" class="form-control" id="Beforedate" placeholder="Before date" />
                    </div>
                </div>
            </div>

            <div style="border-bottom:1px solid black; width:300px; height:100px">
                <h1 style="margin-top:80px">MRF Details</h1>
            </div>
            <div style="margin-top:90px">


                <div style="width:700px; padding-left:70px; margin-top:80px; float:left">
                    <label for="Option">Vacancy for   </label>
                    <input type="radio" id="Vacancyfor" name="Vacancyfor" value="1" /><label>Field Users</label>
                    <input type="radio" id="Vacancyfor" name="Vacancyfor" value="2" /><label>Non Field User </label><br /><br />

                    <label for="type">Vacancy Type </label><br />
                    <input type="radio" id="VacancyType" name="Vacancytype" value="1" /><label>To be vacant</label>
                    <input type="radio" id="VacancyType" name="Vacancytype" value="2" /><label>Vacant</label>
                    <input type="radio" id="VacancyType" name="Vacancytype" value="3" /><label>Expansion</label><br /><br />



                    <div class="form-group" style="width:550px">
                        <label>Territory/HQ</label><br />
                        <input type="text" class="form-control" id="Territory_HQ" placeholder="Territory/HQ" />
                    </div>


                    <div class="form-group" style="width:550px">
                        <label>Division Name</label><br />
                        <input type="text" class="form-control" id="DivisionName" placeholder="Division Name" />
                    </div>

                </div>


                <div style="float:right; margin-top:80px">

                    <label>Experiense:  </label>
                    <label for="Minyr">Min Yr(s)</label> <input type="text" id="Minyr" placeholder="0" style="width:50px" />


                    <label for="Maxyr">Max Yr(s)</label> <input type="text" id="Maxyr" placeholder="0" style="width:50px" /><br /><br />


                    <label>CTC per Annum (in Lakhs)</label><br />
                    <label for="Min">Min </label> <input type="text" id="Min" style="width:50px" />


                    <label for="Max">Max (s)</label> <input type="text" id="Max" style="width:50px" /><br /><br />


                    <label>Additional Requirement</label><br />
                    <textarea id="AdditionalRequirement" rows="4" cols="70"></textarea>

                </div>

            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-primary" style="margin-top:400px" id="btnAdd" onclick="Add()">Submit MRF</button>

            </div>



        </form>

        <div style="overflow:scroll">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            Action
                        </th>
                        <th>
                            status
                        </th>

                        <th>
                            ID
                        </th>
                        <th>
                            PositionName
                        </th>
                        <th>
                            CreatedBy
                        </th>
                        <th>
                            MrfCreatedDate
                        </th>

                        <th>
                            Positionfilledbefore
                        </th>

                        <th>
                            Vacancy
                        </th>
                        <th>
                            VacancyType
                        </th>
                        <th>
                            Territory_HQ
                        </th>
                        <th>
                            DivisionName
                        </th>

                        <th>
                            MinExprience(inyrs)
                        </th>

                        <th>
                            MaxExperience(inyrs)
                        </th>
                        <th>
                            MaxCtc(inlakhs)
                        </th>
                        <th>
                            MinCtc(inlakhs)
                        </th>

                        <th>
                            AdditionalRequirement
                        </th>







                    </tr>
                </thead>
                <tbody class="tbody"></tbody>
            </table>

        </div>



